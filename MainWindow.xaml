<Window x:Class="VolumeWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolumeWpfApp"
        mc:Ignorable="d"
        Title="音量コントロール" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding IsMutedText}" 
                       FontSize="16" 
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <Button Content="ミュート" Command="{Binding MuteCommand}" Width="100" Margin="0,0,0,8"/>
            <Button Content="ミュート解除" Command="{Binding UnmuteCommand}" Width="100"/>            
        </StackPanel>
    </Grid>
</Window>
